	tool = splice
[mergetool "splice"]
	cmd = "nvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode = true
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
